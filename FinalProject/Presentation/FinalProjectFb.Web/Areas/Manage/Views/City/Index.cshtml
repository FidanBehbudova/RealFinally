@using FinalProjectFb.Application.ViewModels
@using FinalProjectFb.Domain.Entities
@model PaginateVM<City>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">City</h4>
            <a asp-action="create" asp-controller="city" style="font-size: 24px;">
                <i class="mdi mdi-library-plus"></i>
            </a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>                         
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>                               
                                <td>
                                    <a asp-action="update" asp-route-id="@item.Id" style="font-size: 24px;">
                                        <i class="mdi mdi-grease-pencil"></i>
                                    </a>
                                    <span style="margin-right: 10px;"></span>
                                    <a asp-action="delete" asp-route-id="@item.Id" style="font-size: 24px;">
                                        <i class="mdi mdi-delete-forever"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="pt-5">
                    <nav aria-label="Page navigation example ">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage<=1 ? "disabled" : "active")">
                                <a class="page-link " asp-route-page="@(Model.CurrentPage-1)" asp-action="index" asp-controller="City">Previous</a>
                            </li>
                            @for (int i = 0; i < Model.TotalPage; i++)
                            {
                                <li class="page-item @(Model.CurrentPage-1==i ? "btn-success active disabled" : "")">
                                    <a class="page-link" asp-route-page="@(i+1)" asp-action="index" asp-controller="City">@(i + 1)</a>
                                </li>
                            }
                            <li class="page-item @(Model.TotalPage==Model.CurrentPage || Model.CurrentPage==1? "disabled" : "active")">
                                <a class="page-link " asp-route-page="@(Model.CurrentPage+1)" asp-action="index" asp-controller="City">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>


            </div>
        </div>
    </div>
</div>