@using FinalProjectFb.Application.ViewModels
@using FinalProjectFb.Domain.Entities
@model PaginateVM<Company>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category</h4>
            <a asp-action="create" asp-controller="category" style="font-size: 24px;">
                <i class="mdi mdi-library-plus"></i>
            </a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>                            
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>                              
                                <td>
                                    <a asp-action="update" asp-route-id="@item.Id" style="font-size: 24px;">
                                        <i class="mdi mdi-open-in-new"></i>
                                    </a>
                                    <span style="margin-right: 10px;"></span>
                                    <a asp-action="delete" asp-route-id="@item.Id" style="font-size: 24px;">
                                        <i class="mdi mdi-send"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <style>
                    .pagination .page-link,
                    .pagination .page-item.active .page-link {
                        color: white !important;
                    }

                    .pagination .page-item.active .page-link {
                        background-color: black !important;
                        border-color: black !important;
                    }

                    .pagination .page-item .page-link {
                        color: black !important;
                    }

                    .pagination .page-item.disabled .page-link {
                        color: #6c757d !important;
                    }
                </style>

                <div class="w-100 d-flex justify-content-center mt-4">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                                <a class="page-link shadow" asp-route-page="@(Model.CurrentPage - 1)" asp-action="index" asp-controller="category" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @for (int i = 0; i < Model.TotalPage; i++)
                            {
                                <li class="page-item @(Model.CurrentPage - 1 == i ? "btn-success active" : "")">
                                    <a class="page-link shadow" asp-route-page="@(i + 1)" asp-action="index" asp-controller="category">@((i + 1))</a>
                                </li>
                            }
                            <li class="page-item @(Model.TotalPage == Model.CurrentPage ? "disabled" : "")">
                                <a class="page-link shadow" asp-route-page="@(Model.CurrentPage + 1)" asp-action="index" asp-controller="category" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>


            </div>
        </div>
    </div>
</div>