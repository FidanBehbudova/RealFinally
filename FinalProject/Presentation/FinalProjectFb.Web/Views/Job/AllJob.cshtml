                    </div>
                    <!-- Job Category Listing start -->
                    <div class="job-category-listing mb-50">
                        <!-- single one -->
                        <div class="single-listing">
                            <div class="small-section-tittle2">
                                <h4>Job Category</h4>
                            </div>
                            <!-- Select job items start -->
                            <form id="categoryForm" method="get" action="/job/alljob">
                                <div class="select-job-items2">
                                    <select asp-items="new SelectList(Model.Categories,nameof(Category.Id),nameof(Category.Name))" name="categoryId" onchange="this.parentElement.parentElement.submit()">
                                        <option value="">All Category</option>                                        
                                    </select>
                                </div>
                            </form>

                            <script>
                                function submitForm() {
                                    document.getElementById("categoryForm").submit();
                                }
                            </script>                                          

                            <!--  Select job items End-->
                            <!-- select-Categories start -->
                      
                                @{
                                    
                                    var uniqueCityNames = Model.Companies
                                    .SelectMany(c => c.CompanyCities)
                                    .Select(cc => cc.City.Name)
                                    .Distinct()
                                    .ToList();
                                }
                                                      
                               
                        
