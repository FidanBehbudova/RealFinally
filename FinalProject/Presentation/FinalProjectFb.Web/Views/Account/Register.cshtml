@using FinalProjectFb.Application.ViewModels.Users
@using FinalProjectFb.Domain.Enums
@using System.Data
@{
	Layout = null;
}

@model RegisterVM

<!DOCTYPE html>
<!-- Created by CodingLab |www.youtube.com/c/CodingLabYT-->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <!--<title> Login and Registration Form in HTML & CSS | CodingLab </title>-->
    <link rel="stylesheet" href="~/assets/account/style.css">
    <!-- Fontawesome CDN Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container">
        <input type="checkbox" id="flip">
        <div class="cover">
            <div class="front">
                <img src="~/assets/account/images/frontImg.jpg" alt="">
                <div class="text">
                    <span class="text-1">Every new friend is a <br> new adventure</span>
                    <span class="text-2">Let's get connected</span>
                </div>
            </div>
            <div class="back">
                <img class="backImg" src="images/backImg.jpg" alt="">
                <div class="text">
                    <span class="text-1">Complete miles of journey <br> with one step</span>
                    <span class="text-2">Let's get started</span>
                </div>
            </div>
        </div>
        <div class="forms">
            <div class="form-content">
                <div class="login-form">
                    <div class="title">Register</div>
                    <form method="post">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-user-alt"></i>
                                <input asp-for="Name" placeholder="Name" class="form-control" type="text"  required>
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-user-alt"></i>
                                <input asp-for="Surname" placeholder="Surname" class="form-control" type="text" required>
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-user-alt"></i>
                                <input asp-for="Username" placeholder="Username" class="form-control" type="text" required>
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input asp-for="Email" placeholder="Email" class="form-control" type="email" required>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                           
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input asp-for="Password" placeholder="Password" class="form-control" type="password" required>
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" class="form-control" type="password" required>
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="input-box">
                                <i class="far fa-calendar-alt"></i>
                                <input asp-for="Birthday" class="form-control" type="date" max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")" required>
                                <span class="text-danger" asp-validation-for="Birthday"></span>
                            </div>

                            <script>                              
                                var birthdayInput = document.querySelector('input[type="date"]');

                                birthdayInput.addEventListener('change', function () {
                                    var selectedDate = new Date(this.value);
                                    var minDate = new Date();
                                    minDate.setFullYear(minDate.getFullYear() - 18);

                                    if (selectedDate > minDate) {
                                        
                                        alert('Persons under the age of 18 cannot register.');
                                        this.value = ''; 
                                    }
                                });
                            </script>





                            <div class="styled-select">

                                    <label asp-for="Gender">Gender</label>
                                    @foreach (var item in Html.GetEnumSelectList<Gender>())
                                    {
                                        <div class="d-flex form-check">
                                            <input asp-for="Gender" id="@item.Value" class="from-cheeck-input" type="radio" value="@item.Value" />
                                            <label asp-for="Gender" class="from-cheeck-label" for="@item.Value">@item.Text</label>
                                        </div>

                                    }

                            </div>
                          
                           
                            <div class="form-group local-forms">
                                <label asp-for="Role">Role <span class="login-danger">*</span></label>
                                <select asp-for="Role" class="form-control select">
                                    <option disabled selected>Choose Role</option>
                                    @foreach (var item in Enum.GetValues(typeof(UserRole)))
                                    {
                                        <option value="@item">@item</option>
                                        <span asp-validation-for="Role" class="text-danger"></span>
                                    }
                                </select>
                            </div>


                            <div class="text"><a href="#">Forgot password?</a></div>
                            <div class="button input-box">
                                <input type="submit" value="Sumbit">
                            </div>
                            <div class="text sign-up-text">Don't have an account? <label for="flip">Sigup now</label></div>
                        </div>
                    </form>
                </div>
                <div class="signup-form">
                    <div class="title">Signup</div>
                    <form action="#">
                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-user"></i>
                                <input type="text" placeholder="Enter your name" required>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input type="text" placeholder="Enter your email" required>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input type="password" placeholder="Enter your password" required>
                            </div>
                            <div class="button input-box">
                                <input type="submit" value="Sumbit">
                            </div>
                            <div class="text sign-up-text">Already have an account? <label for="flip">Login now</label></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

